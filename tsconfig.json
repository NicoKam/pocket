{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "preserveSymlinks": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "paths": {
      "@orca-fe/pocket": ["./packages/pocket/src"],
      "@orca-fe/antd-plus": ["./packages/antd-plus/src"],
      "@orca-fe/tools": ["./packages/tools/src"],
      "@orca-fe/hooks": ["./packages/hooks/src"],
      "@orca-fe/pdf-viewer": ["./packages/pdf-viewer/src"],
      "@orca-fe/painter": ["./packages/painter/src"],
      "@orca-fe/transformer": ["./packages/transformer/src"],
      "@orca-fe/dnd": ["./packages/dnd/src"],
      "@@/*": [".dumi/tmp/*"]
    },
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "packages/**/*", ".eslintrc.cjs", "checkDep.ts", ".dumi/**/*", ".dumirc.ts", "jest.config.cjs"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
