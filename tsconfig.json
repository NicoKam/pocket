{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@orca-fe/pocket": ["packages/pocket/src"],
      "@orca-fe/hooks": ["packages/hooks/src"]
    },
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "packages/**/*", ".eslintrc.js"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
